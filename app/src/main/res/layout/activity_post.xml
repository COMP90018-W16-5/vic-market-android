<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A667">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Post"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#007AFA8B"
            android:text="Cancel"
            android:textColor="#000" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="left"
                android:lineSpacingExtra="8sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Title"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Description"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editDes"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Add Photos:"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#FFFFFF"
                android:columnCount="5"
                android:useDefaultMargins="true">

                <ImageView
                    android:id="@+id/image_picker"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"

                    android:background="@drawable/border"
                    app:srcCompat="@drawable/ic_photo_camera_white_24dp"
                    app:tint="#7C000000" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:adjustViewBounds="false"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/border" />


            </GridLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Category:"
                    android:textColor="#A5000000"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spin_cate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:paddingRight="10dp"
                        android:spinnerMode="dropdown"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignEnd="@id/spin_cate"
                        android:background="#FFFFFF"
                        android:foreground="@drawable/common_filter_arrow_down" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="#AD000000"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Price: AUD($): "
                    android:textColor="#A5000000"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spin_price"
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/dropdown"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignEnd="@id/spin_price"
                        android:background="#FFFFFF"
                        android:foreground="@drawable/common_filter_arrow_down"
                        android:paddingRight="20dp" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_price"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Contact Name:"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="Phone Number:"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Location:"
                android:textColor="#A5000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:singleLine="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/post_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#C800A667"
                android:text="Post"
                android:textSize="24sp">

            </Button>
        </LinearLayout>


    </ScrollView>
</LinearLayout>