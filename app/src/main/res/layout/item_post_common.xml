<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:background="@drawable/bg_ripple_white"
            android:clickable="true"
            android:orientation="horizontal"
            android:id="@+id/common_item_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <ImageView
                android:id="@+id/common_item_picture"
                android:background="@color/colorLine"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/common_item_title"
                    android:lines="2"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:text="asdasdasdasdasdad"
                    android:textColor="@color/colorTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/common_item_price"
                    android:text="$12.123"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/common_item_distance"
                    android:layout_toRightOf="@id/tmp"
                    android:layout_above="@id/common_item_price"
                    android:layout_centerVertical="true"
                    android:text="123.123km"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/tmp"
                    android:layout_marginBottom="1dp"
                    android:layout_above="@id/common_item_price"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_location"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>